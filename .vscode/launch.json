    "version": "0.2.0",
    "configurations": [
        {
            "name": "Android Native Debug",
            "type": "cppdbg",
            "request": "launch",
            //"preLaunchTask": "Start program with gdbserver",
            "program": "${command:cmake.getLaunchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "miDebuggerServerAddress": "localhost:3880",
            "miDebuggerPath": "${env:ANDROID_NDK_HOME}/prebuilt/darwin-x86_64/bin/gdb",
            "MIMode": "gdb",
            "logging": {
                "engineLogging": true,
                "trace": true,
                "traceResponse": true
            },
        }
    ]
}